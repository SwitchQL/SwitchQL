{
  "name": "switchql",
  "version": "1.0.0",
  "description": "Automated Transcription of DB scripts into GraphQL schemas and resolvers",
  "main": "build/electron/main.js",
  "scripts": {
    "test": "jest --watch",
    "test:ci": "jest",
    "lint": "./node_modules/.bin/eslint src/* --fix --ext .ts",
    "prestart": "tsc",
    "start": "webpack-dev-server --hot --mode development --inline --host 0.0.0.0 --port 3000",
    "build": "concurrently \"webpack --mode production\" \"tsc\"",
    "prepack": "npm run build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -p never"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SwitchQL/SwitchQL.git"
  },
  "author": "Robin Seitz, Ian Laue, Zahaan Jasani, Brian Kim, Edward Kim",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SwitchQL/SwitchQL/issues"
  },
  "homepage": "https://github.com/SwitchQL/SwitchQL#readme",
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "jszip": "^3.2.1",
    "loaders.css": "^0.1.2",
    "lodash.some": "^4.6.0",
    "mssql": "^5.1.0",
    "normalize.css": "^8.0.1",
    "pg": "^7.9.0",
    "pg-promise": "^8.6.4",
    "promise-mysql": "^3.3.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-tabs": "^2.3.0",
    "react-toastify": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^24.0.15",
    "@types/jszip": "^3.1.6",
    "@types/mssql": "^4.0.16",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-loader": "^8.0.5",
    "concurrently": "^4.1.1",
    "css-loader": "^1.0.1",
    "electron": "^13.6.6",
    "electron-builder": "^20.39.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^6.0.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.1",
    "jest": "^24.5.0",
    "lint-staged": "^9.2.0",
    "node-sass": "^4.12.0",
    "react-loaders": "^3.0.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ttf-loader": "^1.0.2",
    "typescript": "^3.5.3",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:ci && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  }
}
